<h3 class="ms-2 text-light">Cadastro de Cupons</h3>

<form action="/Cupons/SalvarDados" method="post">

    <div class="card shadow">
        <div class="card-body">

            <div class="row g-2">

                <div class="col-12 col-lg-7">
                    <label for="titulo" class="form-label m-1">Titulo do Cupom</label>
                    <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                </div>

                <div class="col-12 col-lg-2">
                    <label for="titulo" class="form-label m-1">Tipo</label>
                    <select class="form-select form-select-sm">
                        <option selected>Selecione...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

                <div class="col-6 col-lg-1">
                    <label for="titulo" class="form-label m-1">Pontos</label>
                    <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                </div>

                <div class="col-6 col-lg-2">
                    <label for="titulo" class="form-label m-1">Vencimento</label>
                    <input type="datetime-local" name="titulo" class="form-control form-control-sm" id="titulo">
                </div>

                <div class="col-12">
                    <label for="exampleFormControlTextarea1" class="form-label m-1">Descrição do Cupom</label>
                    <textarea class="form-control DescTextarea" id="" rows="3"></textarea>
                </div>


            </div>

        </div>

        <div class="card-footer">

            <div class="row g-2">

                <div class="col-6">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                            Ativado
                        </label>
                    </div>

                </div>

                <div class="col-6 d-inline-flex justify-content-end gap-2">

                    <a href="/Cupons/Lista" class="btn btn-sm btn-outline-danger BtnCancelar">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-success BtnSalvar">Salvar</button>

                </div>

            </div>

        </div>

    </div>

</form>