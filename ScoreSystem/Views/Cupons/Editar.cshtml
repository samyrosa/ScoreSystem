@{
    ViewData["Title"] = "Editar de Cupons";
}
@model ScoreSystem.Entidades.Cupom
<h3 class="ms-2 text-light"><i class="bi bi-bookmark-fill"></i> Cadastro de Cupons</h3>

<form action="/Cupons/SalvarDados" method="post">

    <div class="card shadow">
        <div class="card-body">

            <div class="row g-2">

                <div class="col-12 col-lg-7">
                    <label for="titulo" class="form-label m-1">Titulo do Cupom</label>
                    <input type="text" name="TITULO"  value="@Model.TITULO" class="form-control form-control-sm" id="titulo">
                </div>
                <div class="col-6 col-lg-1">
                    <label for="Ponto" class="form-label m-1">Pontos</label>
                    <input type="text" name="PONTO" value="@Model.PONTO" class="form-control form-control-sm" id="Ponto">
                </div>

                <div class="col-6 col-lg-2">
                    <label for="DtVencimento" class="form-label m-1">Vencimento</label>
                    <input type="datetime-local" name="DT_VENCIMENTO" value="@Model.DT_VENCIMENTO" class="form-control form-control-sm" id="DtVencimento">
                </div>

                <div class="col-12">
                    <label for="Descricao" class="form-label m-1">Descrição do Cupom</label>
                    <textarea class="form-control DescTextarea" name="DESCRICAO" value="@Model.DESCRICAO" id="Descricao" rows="3"></textarea>
                </div>


            </div>

        </div>

        <div class="card-footer">

            <div class="row g-2">

                <div class="col-6">

                    <div class="form-check">
                        <input class="form-check-input" name="ATIVO" type="checkbox" value="@Model.ATIVO" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                            Ativado
                        </label>
                    </div>

                </div>

            </div>

        </div>

    </div>

</form>