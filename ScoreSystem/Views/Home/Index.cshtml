@model ScoreSystem.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h3 class="ms-2 text-light">Bem Vindo!</h3>
<div class="row g-2">
    <div class="col-12 col-lg-12">
        <div class="card shadow h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-person-fill"></i> Informaçoes do Usuario</h5>
                <hr />
                <ul class="listInfo">
                    <li><b>Nome:</b> @Model.usuarioLogado.NOME</li>
                    <li><b>Email:</b>  @Model.usuarioLogado.EMAIL</li>
                    <li><b>CPF:</b>  @Model.usuarioLogado.CPF</li>
                </ul>
                <a href="/Usuarios/ExcluirPerfil/@Model.usuarioLogado.CODIGO" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-person-fill-x"></i> Excluir Conta
                </a>

            </div>

        </div>
    </div>
