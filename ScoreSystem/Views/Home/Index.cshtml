    <div class="col-12 col-lg-6">
        <div id="CardCupom" class="card overflow-auto shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-bookmark-fill"></i>  Cupons Disponiveis</h5>
                <hr />
                <div class="list-group list-group-flush">
                    @foreach (var item in Model.todosCupons)
                    {
                        <a href="/Cupons/Visualizar/@item.CODIGO" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">@item.TITULO</div>
                                @item.DESCRICAO
                            </div>
                            <span class="badge bg-success rounded-pill">+ @item.PONTO Pts</span>
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <div id="CardRecompensa" class="card overflow-auto shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-trophy-fill"></i>  Recompensas Disponiveis</h5>
                <hr />
                <div class="list-group list-group-flush">
                    @foreach (var item in Model.todasRecompensas)
                    {
                        <a href="/Recompensas/Visualizar/@item.CODIGO" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">@item.TITULO</div>
                                @item.DESCRICAO
                            </div>
                            <span class="badge bg-danger rounded-pill">- @item.PONTO Pts</span>
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/sweet-alert/sweetalert.min.js"></script>

@if (TempData["Sucesso"] != null)
{

    <script type="text/javascript">
        swal("Sucesso", "@TempData["Sucesso"]", "success");
    </script>

}