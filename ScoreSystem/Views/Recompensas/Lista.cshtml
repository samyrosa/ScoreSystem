@{
    ViewData["Title"] = "Manutenção de Recompensas";
}

@model List<ScoreSystem.Entidades.Recompensas>

<h3 class="ms-2 text-light"><i class="bi bi-trophy-fill"></i> Manutenção de Reconpensas</h3>
<div class="card shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div class="row g-1">
                    <div class="col-3 col-lg-6">

                        <a href="/Recompensas/Cadastro" class="btn btn-sm btn-outline-success shadow-sm">
                            <i class="bi bi-clipboard-plus"></i>  Cadastrar
                        </a>

                    </div>
                    <div class="col-4 col-lg-2">
                        <select class="form-select form-select-sm shadow-sm" aria-label=".form-select-sm example">
                            <option selected>Selecione...</option>
                            <option value="1">Título</option>
                            <option value="2">Valor</option>
                            <option value="3">Descrição</option>
                        </select>
                    </div>
                    <div class="col-5 col-lg-4">
                        <div class="input-group shadow-sm mb-3">
                            <input type="text" class="form-control form-control-sm">
                            <button class="btn btn-sm btn-dark" type="button" id="button-addon2">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <hr>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Descrição</th>
                            <th scope="col" style="max-width: 10px;"></th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @foreach(var recompensa in Model)
                        {
                            <tr>
                                <th scope="row">@recompensa.CODIGO</th>
                                <td>@recompensa.TITULO</td>
                                <td>@recompensa.PONTO</td>
                                <td class="">@recompensa.DESCRICAO</td>
                                <td class="text-end">
                                    <div class="dropdown-center me-3">
                                        <a class="link-dark" type="button" data-bs-toggle="dropdown"
                                           aria-expanded="false">
                                            <i class="bi bi-three-dots"></i>
                                        </a>
                                        <ul class="dropdown-menu mx-0 shadow w-220px" data-bs-theme="light">
                                            <li>
                                                <a class="dropdown-item d-flex gap-2 align-items-center" href="/Recompensas/Visualizar/@recompensa.CODIGO">
                                                    <i class="bi bi-eye-fill"></i>
                                                    Visualizar
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item d-flex gap-2 align-items-center" href="/Recompensas/Editar/@recompensa.CODIGO">
                                                    <i class="bi bi-pencil-square"></i>
                                                    Editar
                                                </a>
                                            </li>

                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li>
                                                <a class="dropdown-item link-danger dropdown-item-danger d-flex gap-2 align-items-center"
                                                   href="/Recompensas/Excluir/@recompensa.CODIGO">
                                                    <i class="bi bi-trash"></i>
                                                    Deletar
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>

                            </tr>
                        }
               
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script src="~/lib/sweet-alert/sweetalert.min.js"></script>

@if (TempData["Sucesso"] != null)
{

    <script type="text/javascript">
        swal("Sucesso", "@TempData["Sucesso"]", "success");
    </script>

}