@model ScoreSystem.Entidades.Usuarios

<h3 class="ms-2 text-light"><i class="bi bi-person-fill"></i> Editar Usuario</h3>

<form action="/Usuarios/SalvarDadosManual" method="post" onsubmit="return Validacao()">

    <div class="card shadow">
        <div class="card-body">

            <div class="row g-2">
                <input type="hidden" name="CODIGO" value="@Model.CODIGO">

                <div class="col-12 col-lg-7">
                    <label for="titulo" class="form-label m-1">Nome</label>
                    <input type="text" name="NOME" value="@Model.NOME" class="form-control form-control-sm" id="Nome">
                </div>

                <div class="col-6 col-lg-3">
                    <label for="titulo" class="form-label m-1">CPF</label>
                    <input type="text" name="CPF" value="@Model.CPF" class="form-control form-control-sm" id="Cpf">
                </div>


                <div class="col-12 col-lg-2">
                    <label for="titulo" class="form-label m-1">Tipo</label>
                    @if (Model.TIPO == "A")
                    {
                        <select name="TIPO" class="form-select form-select-sm">
                            <option selected>@Model.TIPO</option>
                            <option value="C">C</option>
                        </select>

                    }
                    else
                    {
                        <select name="TIPO" class="form-select form-select-sm">
                            <option selected>@Model.TIPO</option>
                            <option value="A">A</option>
                        </select>
                    }

                </div>


                <div class="col-12 col-lg-6">
                    <label for="titulo" class="form-label m-1">Email</label>
                    <input type="email" name="EMAIL" value="@Model.EMAIL" class="form-control form-control-sm" id="Email">
                </div>
                <div class="col-6 col-lg-3">
                    <label for="titulo" class="form-label m-1">Senha</label>
                    <input type="password" value="....." class="form-control form-control-sm" id="Senha" disabled>
                </div>
                <div class="col-6 col-lg-3">
                    <label for="titulo" class="form-label m-1">Confirme Senha</label>
                    <input type="password" value="....." class="form-control form-control-sm" id="Senha" disabled>
                </div>

            </div>

        </div>
        <div class="card-footer">

            <div class="row g-2">

                <div class="col-6">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked disabled>
                        <label class="form-check-label" for="flexCheckChecked">
                            Ativado
                        </label>
                    </div>

                </div>
                <div class="col-6 d-inline-flex justify-content-end gap-2">

                    <a href="/Usuarios/Lista" class="btn btn-sm btn-outline-danger BtnCancelar">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-success BtnSalvar">Salvar</button>

                </div>
            </div>

        </div>

    </div>




</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-mask/jquery.mask.js"></script>

<script>
    $('input[name="CPF"]').mask('000.000.000-00');
</script>

@section Scripts{
    <script src="~/lib/sweet-alert/sweetalert.min.js"></script>
    <script>
        function Validacao() {
            if ($("#Nome").val() == "") {
                swal("Erro", "O campo Nome não pode está vazio!", "error");
                return false;
            } else if ($("#Cpf").val() == "") {
                swal("Erro", "O campo CPF não pode está vazio!", "error");
                return false;
            }
            else if ($("#Email").val() == "") {
                swal("Erro", "O campo Email não pode está vazio!", "error");
                return false;
            } else {
                swal("Sucesso", "Cupom cadastrado com sucesso!", "success");
                return true
            }

        }
    </script>
                            }