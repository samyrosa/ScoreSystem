@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScoreSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScoreSystem.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
</head>
<body class="FundoLogin">
    <div class="position-absolute top-50 start-50 translate-middle ">
        <div id="cardCadastro" class="card shadow-lg">
            <div class="card-body">
                <h3>Cadastrar</h3>
                <div class="row g-2">
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Nome de Usuario</label>
                        <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                </div>
                <div class="row g-2">

                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Nome</label>
                        <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Sobrenome</label>
                        <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Email</label>
                        <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">CPF</label>
                        <input type="text" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Senha</label>
                        <input type="password" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 col-lg-6">
                        <label for="titulo" class="form-label m-1">Confirma Senha</label>
                        <input type="password" name="titulo" class="form-control form-control-sm" id="titulo">
                    </div>
                    <div class="col-12 d-inline-flex align-items-center justify-content-end gap-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary BtnCancelar">Entrar</button>
                        <button type="button" class="btn btn-sm btn-success BtnSalvar">Cadastrar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card bg-warning bg-gradient text-dark mt-2">
            <div class="card-body">
                <b class="titulo">Midas </b>
                <i> - 2023</i>
            </div>
        </div>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
